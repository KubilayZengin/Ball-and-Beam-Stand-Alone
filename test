# Library installation commands given below
import customtkinter  # pip install customtkinter
import serial  # pip install serial
import numpy as np  # pip install numpy
import matplotlib.pyplot as plt  # pip install matplotlib
import PID  # PID class
from PIL import Image  # pip install pillow


# Set GUI color function.
def set_gui_color(x, y):
    customtkinter.set_appearance_mode(x)
    customtkinter.set_default_color_theme(y)


# Modes: "system" (standard), "dark", "light"
# Themes: "blue" (standard), "green", "dark-blue"
set_gui_color("dark", "dark-blue")

# Set different font size types
Font_tuple_1 = ("Roboto", 24)
Font_tuple_2 = ("Roboto", 16)
Font_tuple_3 = ("Roboto", 14)
Font_tuple_4 = ("Roboto", 10)


class App(customtkinter.CTk):
    def __init__(self):
        super().__init__()
        self.title("Acrome Ball and Beam")
        self.geometry(f"{500}x{800}")
        self.frame = customtkinter.CTkFrame(self)
        self.frame.pack(pady=20, padx=60, fill="both", expand=True)

        self.label_1 = customtkinter.CTkLabel(master=self, text="", image=customtkinter.CTkImage(dark_image=Image.open("images/acrome.png"), size=(300, 75)))
        self.label_1.pack(padx=10,pady=12)
        self.label_1.place(x=70,y=60)

        self.label_2 = customtkinter.CTkLabel(master=self, text="Ball and Beam ", font=Font_tuple_1, text_color="white")
        self.label_2.pack(padx=10,pady=12)
        self.label_2.place(x=140,y=150)

        self.label_3 = customtkinter.CTkLabel(master=self, text="Step ",font=Font_tuple_3, text_color="white")
        self.label_3.pack(padx=10, pady=12)
        self.label_3.place(x=156, y=286)


if __name__ == "__main__":
    app = App()
    app.mainloop()
